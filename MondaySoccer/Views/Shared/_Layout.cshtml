<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title MondaySoccer</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap.css")
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">MondaySoccer</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Games", "Index", "Game")</li>
                    <li>@Html.ActionLink("Players", "Index", "Player")</li>
                    <li>@Html.ActionLink("Teams", "Index", "Team")</li>
                </ul>
@*                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                    </li>
                </ul>*@
            </div>


        </div>
    </div>

    <div class="container">

        <div class="row ">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="content-wrapper">
            @*            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>*@
        </div>
    </footer>
    @Scripts.Render("~/Scripts/jquery-2.1.0.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
